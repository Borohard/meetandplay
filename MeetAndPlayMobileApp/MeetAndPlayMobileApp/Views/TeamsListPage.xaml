                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ViewCell.View >
                                        <StackLayout>
                                            
                                            <Frame Margin="5,5,5,5" HasShadow="False"  Style="{StaticResource MainFrameStyle}" >
                                                <StackLayout Margin="-10" >
                                                    <Frame  HeightRequest="-15">
                                                        <Label Margin="-10,-20,0,0" Text="{Binding Title}" TextColor="Black" FontSize="Body"/>    
                                                    </Frame>   
                                                            
                                                        
                                                    <Grid>
                                                        
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="200" />
                                                            <ColumnDefinition Width="*" />
                                                            
                                                        </Grid.ColumnDefinitions>
                                                        <Image Source="{Binding ImageOfRequest}" Grid.Column="1" Grid.Row="0"/>



                                                        <StackLayout Grid.Row="0" Grid.Column="0">
                                                            <StackLayout Orientation="Horizontal" >
                                                                    <Image Source="Game.png" WidthRequest="15"/>
                                                                    <Label Text="{Binding NameOfTheGame}" />
                                                                </StackLayout>
                                                                <StackLayout Orientation="Horizontal" >
                                                                    <Image Source="Adress.png" WidthRequest="15"/>
                                                                    <Label Text="{Binding PlaceType}" />
                                                                </StackLayout>
                                                                <StackLayout Orientation="Horizontal">
                                                                    <Image Source="PlannedGame.png" WidthRequest="15"/>
                                                                    <Label Text="{Binding PlannedGameDate}" />
                                                                </StackLayout>

                                                                <StackLayout Orientation="Horizontal">
                                                                    <Image Source="Team.png" WidthRequest="15"/>
                                                                    <Label Text="Сейчас игроков: "/>
                                                                    <Label Text="{Binding CurrentPlayersCount}"/>
                                                                </StackLayout>    
                                                        </StackLayout>
                                                             
                                                        
                                                    </Grid>
                                                                                                      
                                                </StackLayout>   
                                                
