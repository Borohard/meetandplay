@inherits AddOfferButtonComponent

<div class="my-4">
    <button class="btn btn-warning bg-lightyellow p-4 border-0 rounded" @onclick="ShowAddOfferModalAsync"><b>Добавить новое объявление!</b></button>
</div>

<div @ref="Modal" id="add-offer-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content p-4 text-center">
            <h3><b>Что вы хотите?</b></h3>
            <div class="row">
                <div class="col p-4 d-flex justify-content-center">
                    <button @onclick=@(() => RedirectWithCloseModalAsync("/AddLobby")) class="btn btn-outline-warning text-dark">Я хочу организовать игру</button>
                </div>
                <div class="col p-4 d-flex justify-content-center">
                    <button @onclick=@(() => RedirectWithCloseModalAsync("/AddPersonal")) class="btn btn-outline-warning text-dark">Я хочу поучавствовать</button>
                </div>
            </div>
        </div>
    </div>
</div>