@using MeetAndPlay.Core.Infrastructure.Extensions
@inherits BrowserComponent

<div class="mx-4">
     @foreach (var group in CurrentOffers.AsGroups(2))
        {
            <div class="row">
                @foreach (var item in group)
                {
                    <div class="card col-sm my-4 border-0">
                      <img class="card-img-top rounded" style="max-height: 300px; object-fit: cover;" src="@item.PosterUrl" alt="Постер новости">
                      <div class="card-body">
                          <h5 class="card-title"><b>@item.Title</b></h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text"><small class="text-muted">@item.ActualOfferDate?.ToString("dd MMMM yyyy")</small></p>
                      </div>
                    </div>
                }
            </div>
        }
</div>